{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "noImplicitThis": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "rootDirs": [
      "./pages",
      "./src"
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "src/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", "src/container/.00...tsx"
, "src/server.jsr.js", "api/server.mjs"  ],
  "exclude": [
    "node_modules"
  ]
}
